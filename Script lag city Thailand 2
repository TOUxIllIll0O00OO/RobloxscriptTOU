local player = game:GetService("Players").LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- UI ‡∏™‡∏£‡πâ‡∏≤‡∏á
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "FirefliesSpamUI"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = player:WaitForChild("PlayerGui")

local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 120, 0, 50)
button.Position = UDim2.new(0, 10, 0, 10)
button.Text = "‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏¢‡∏¥‡∏á Fireflies"
button.Parent = ScreenGui
button.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
button.TextColor3 = Color3.new(1, 1, 1)
button.Font = Enum.Font.SourceSansBold
button.TextScaled = true

-- ‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£‡πÄ‡∏õ‡∏¥‡∏î/‡∏õ‡∏¥‡∏î
local running = false

-- Loop
task.spawn(function()
    while true do
        if running then
            local remote = character:FindFirstChild("Fireflies") and character.Fireflies:FindFirstChild("RemoteEvent")
            if remote then
                remote:FireServer()
            end
        end
        task.wait(0.001)
    end
end)

-- ‡∏õ‡∏∏‡πà‡∏°‡∏™‡∏•‡∏±‡∏ö ‡πÄ‡∏õ‡∏¥‡∏î/‡∏õ‡∏¥‡∏î
button.MouseButton1Click:Connect(function()
    running = not running
    button.Text = running and "‡∏´‡∏¢‡∏∏‡∏î‡∏¢‡∏¥‡∏á Fireflies" or "‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏¢‡∏¥‡∏á Fireflies"
    button.BackgroundColor3 = running and Color3.new(1, 0.2, 0.2) or Color3.new(0.2, 0.2, 0.2)
end)

local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- üñº ‡πÉ‡∏™‡πà Asset ID ‡∏Ç‡∏≠‡∏á‡∏£‡∏π‡∏õ‡∏Ñ‡∏∏‡∏ì‡∏ó‡∏µ‡πà‡∏≠‡∏±‡∏õ‡πÇ‡∏´‡∏•‡∏î‡πÅ‡∏•‡πâ‡∏ß
local imageId = "rbxassetid://‡πÉ‡∏™‡πà‡πÑ‡∏≠‡∏î‡∏µ‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡∏ï‡∏£‡∏á‡∏ô‡∏µ‡πâ" -- ‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á: "rbxassetid://15234213421"

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏´‡∏ô‡πâ‡∏≤‡∏à‡∏≠ UI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ScriptAnnouncement"
screenGui.Parent = player:WaitForChild("PlayerGui")
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û‡πÄ‡∏ï‡πá‡∏°‡∏à‡∏≠
local imageLabel = Instance.new("ImageLabel")
